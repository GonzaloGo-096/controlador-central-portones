generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Nuevo modelo Identity + Membership ─────────────────────────────────────

model Identity {
  id        String   @id @default(cuid())
  fullName  String?  @map("full_name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  credentials        Credential[]
  accountMemberships AccountMembership[]
  gateEvents         GateEvent[]
  eventosPorton      EventoPorton[]

  @@map("identities")
}

model Credential {
  id         Int            @id @default(autoincrement())
  identityId String         @map("identity_id")
  type       CredentialType
  identifier String
  secretHash String?        @map("secret_hash")
  isActive   Boolean        @default(true) @map("is_active")
  createdAt  DateTime       @default(now()) @map("created_at")
  identity   Identity       @relation(fields: [identityId], references: [id], onDelete: Cascade)

  @@unique([type, identifier], map: "uq_credentials_type_identifier")
  @@index([identityId], map: "idx_credentials_identity_id")
  @@map("credentials")
}

model AccountMembership {
  id         Int                @id @default(autoincrement())
  identityId String             @map("identity_id")
  accountId  Int                @map("account_id")
  role       MembershipRole     @default(OPERATOR)
  status     MembershipStatus   @default(ACTIVE)
  createdAt  DateTime           @default(now()) @map("created_at")
  updatedAt  DateTime           @updatedAt @map("updated_at")

  identity   Identity           @relation(fields: [identityId], references: [id], onDelete: Cascade)
  account    Account            @relation(fields: [accountId], references: [id], onDelete: Cascade)
  portonGroups MembershipPortonGroup[]
  gatePermissions MembershipGatePermission[]

  @@unique([identityId, accountId], map: "uq_account_membership_identity_account")
  @@index([accountId], map: "idx_account_memberships_account_id")
  @@index([identityId], map: "idx_account_memberships_identity_id")
  @@map("account_memberships")
}

model MembershipPortonGroup {
  id             Int        @id @default(autoincrement())
  membershipId   Int        @map("membership_id")
  portonGroupId  Int        @map("porton_group_id")
  roleInGroup    PortonGroupRole? @default(operator) @map("role_in_group")
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")

  membership     AccountMembership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  portonGroup    PortonGroup       @relation(fields: [portonGroupId], references: [id], onDelete: Cascade)

  @@unique([membershipId, portonGroupId], map: "uq_membership_porton_group")
  @@index([portonGroupId], map: "idx_membership_porton_groups_porton_group_id")
  @@map("membership_porton_groups")
}

model MembershipGatePermission {
  id           Int            @id @default(autoincrement())
  membershipId Int            @map("membership_id")
  gateId       Int            @map("gate_id")
  permission   GatePermission @default(open)
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  membership   AccountMembership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  gate         Gate              @relation(fields: [gateId], references: [id], onDelete: Cascade)

  @@unique([membershipId, gateId], map: "uq_membership_gate_permission")
  @@index([gateId], map: "idx_membership_gate_permissions_gate_id")
  @@map("membership_gate_permissions")
}

enum MembershipRole {
  SUPERADMIN
  ADMIN
  OPERATOR

  @@map("MembershipRole")
}

enum MembershipStatus {
  ACTIVE
  SUSPENDED

  @@map("MembershipStatus")
}

// ─── Modelos existentes (Account, PortonGroup, Gate, etc.) ───────────────────

model Account {
  id        Int      @id @default(autoincrement())
  name      String
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  accountMemberships AccountMembership[]
  portonGroups       PortonGroup[]
  eventosPorton      EventoPorton[]
  cultivos           Cultivo[]
  devices            Device[]

  @@map("accounts")
}

model PortonGroup {
  id          Int          @id @default(autoincrement())
  accountId   Int          @map("account_id")
  name        String
  description String?
  isActive    Boolean      @default(true) @map("is_active")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  deletedAt   DateTime?    @map("deleted_at")

  account     Account      @relation(fields: [accountId], references: [id], onDelete: Restrict)
  gates       Gate[]
  membershipPortonGroups MembershipPortonGroup[]
  eventosPorton EventoPorton[]

  @@index([accountId], map: "idx_porton_groups_account_id")
  @@map("porton_groups")
}

model Device {
  id        String     @id @default(uuid()) @db.Uuid
  deviceKey String     @unique @map("device_key")
  accountId Int        @map("account_id")
  type      DeviceType
  isActive  Boolean    @default(true) @map("is_active")
  createdAt DateTime   @default(now()) @map("created_at")

  account Account @relation(fields: [accountId], references: [id], onDelete: Restrict)
  gates   Gate[]

  @@index([accountId], map: "idx_devices_account_id")
  @@map("devices")
}

model Gate {
  id             Int        @id @default(autoincrement())
  portonGroupId  Int        @map("porton_group_id")
  deviceId       String     @map("device_id") @db.Uuid
  name           String
  type           String
  identifier     String?    @unique
  topicMqtt      String?    @map("topic_mqtt")
  location       String?
  state          GateState  @default(closed)
  isActive       Boolean    @default(true) @map("is_active")
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")
  deletedAt      DateTime?  @map("deleted_at")

  portonGroup    PortonGroup @relation(fields: [portonGroupId], references: [id], onDelete: Restrict)
  device         Device      @relation(fields: [deviceId], references: [id], onDelete: Restrict)
  membershipGatePermissions MembershipGatePermission[]
  gateEvents     GateEvent[]
  eventosPorton  EventoPorton[]

  @@index([portonGroupId], map: "idx_gates_porton_group_id")
  @@index([deviceId], map: "idx_gates_device_id")
  @@map("gates")
}

model GateEvent {
  id         Int        @id @default(autoincrement())
  gateId     Int        @map("gate_id")
  identityId String?    @map("identity_id")
  action     GateAction
  createdAt  DateTime   @default(now()) @map("created_at")

  gate       Gate       @relation(fields: [gateId], references: [id], onDelete: Cascade)
  identity   Identity?  @relation(fields: [identityId], references: [id], onDelete: SetNull)

  @@index([gateId], map: "idx_gate_events_gate_id")
  @@index([identityId], map: "idx_gate_events_identity_id")
  @@map("gate_events")
}

model EventoPorton {
  id              Int        @id @default(autoincrement())
  identityId      String?    @map("identity_id")
  cuentaId        Int        @map("cuenta_id")
  portonId        Int        @map("porton_id")
  grupoPortonesId Int        @map("grupo_portones_id")
  accion          String
  canal           String
  fechaHora       DateTime   @default(now()) @map("fecha_hora")

  identity        Identity?  @relation(fields: [identityId], references: [id], onDelete: SetNull)
  cuenta          Account    @relation(fields: [cuentaId], references: [id], onDelete: Restrict)
  porton          Gate       @relation(fields: [portonId], references: [id], onDelete: Restrict)
  grupoPortones   PortonGroup @relation(fields: [grupoPortonesId], references: [id], onDelete: Restrict)

  @@index([cuentaId], map: "idx_eventos_porton_cuenta_id")
  @@index([portonId], map: "idx_eventos_porton_porton_id")
  @@index([grupoPortonesId], map: "idx_eventos_porton_grupo_portones_id")
  @@index([fechaHora], map: "idx_eventos_porton_fecha_hora")
  @@map("eventos_porton")
}

model Cultivo {
  id          Int       @id @default(autoincrement())
  accountId   Int       @map("account_id")
  nombre      String
  descripcion String?
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  account     Account   @relation(fields: [accountId], references: [id], onDelete: Restrict)
  macetas     Maceta[]

  @@index([accountId], map: "idx_cultivos_account_id")
  @@map("cultivos")
}

// ─── Módulo Cultivos: riego adaptativo por maceta ─────────────────────────────

model Maceta {
  id             String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  cultivoId      Int       @map("cultivo_id")
  nombre         String
  identificador  String?
  isActive       Boolean   @default(true) @map("is_active")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  cultivo              Cultivo            @relation(fields: [cultivoId], references: [id], onDelete: Restrict)
  sensoresLecturas     SensoresLectura[]
  riegos               Riego[]
  parametrosRiego      ParametrosRiego[]
  adaptaciones         Adaptacion[]
  logsSistema          LogSistema[]

  @@index([cultivoId], map: "idx_macetas_cultivo_id")
  @@map("macetas")
}

model SensoresLectura {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  macetaId   String   @map("maceta_id") @db.Uuid
  humedad    Float?
  temperatura Float?
  ec         Float?
  extras     Json?
  createdAt  DateTime @default(now()) @map("created_at")

  maceta Maceta @relation(fields: [macetaId], references: [id], onDelete: Restrict)

  @@index([macetaId, createdAt(sort: Desc)], map: "idx_sensores_lecturas_maceta_created_at_desc")
  @@map("sensores_lecturas")
}

model Riego {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  macetaId   String   @map("maceta_id") @db.Uuid
  volumenMl  Int      @map("volumen_ml")
  ejecutadoAt DateTime @map("ejecutado_at")
  createdAt  DateTime @default(now()) @map("created_at")

  maceta      Maceta       @relation(fields: [macetaId], references: [id], onDelete: Restrict)
  adaptaciones Adaptacion[]

  @@index([macetaId], map: "idx_riegos_maceta_id")
  @@index([ejecutadoAt], map: "idx_riegos_ejecutado_at")
  @@map("riegos")
}

model ParametrosRiego {
  id                   String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  macetaId             String    @map("maceta_id") @db.Uuid
  version              Int       @default(1)
  humedadObjetivoMin   Float?    @map("humedad_objetivo_min")
  humedadObjetivoMax   Float?    @map("humedad_objetivo_max")
  volumenMlBase        Int?      @map("volumen_ml_base")
  vigenteDesde         DateTime  @default(now()) @map("vigente_desde")
  vigenteHasta         DateTime? @map("vigente_hasta")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  maceta Maceta @relation(fields: [macetaId], references: [id], onDelete: Restrict)

  @@index([macetaId], map: "idx_parametros_riego_maceta_id")
  @@map("parametros_riego")
}

model Adaptacion {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  macetaId             String   @map("maceta_id") @db.Uuid
  riegoId              String?  @map("riego_id") @db.Uuid
  tipo                 String
  parametrosAnteriores Json?    @map("parametros_anteriores")
  parametrosNuevos     Json?    @map("parametros_nuevos")
  createdAt            DateTime @default(now()) @map("created_at")

  maceta Maceta @relation(fields: [macetaId], references: [id], onDelete: Restrict)
  riego  Riego? @relation(fields: [riegoId], references: [id], onDelete: SetNull)

  @@unique([riegoId, tipo], map: "uq_adaptaciones_riego_tipo")
  @@index([macetaId], map: "idx_adaptaciones_maceta_id")
  @@index([riegoId], map: "idx_adaptaciones_riego_id")
  @@index([createdAt], map: "idx_adaptaciones_created_at")
  @@map("adaptaciones")
}

model LogSistema {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nivel     String
  mensaje   String
  contexto  Json?
  modulo    String?
  evento    String?
  userId    Int?     @map("user_id")
  cultivoId Int?     @map("cultivo_id")
  cicloId   String?  @map("ciclo_id") @db.Uuid
  macetaId  String?  @map("maceta_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  maceta Maceta? @relation(fields: [macetaId], references: [id], onDelete: SetNull)

  @@index([macetaId], map: "idx_logs_sistema_maceta_id")
  @@index([createdAt], map: "idx_logs_sistema_created_at")
  @@index([nivel], map: "idx_logs_sistema_nivel")
  @@index([modulo], map: "idx_logs_sistema_modulo")
  @@index([evento], map: "idx_logs_sistema_evento")
  @@index([userId], map: "idx_logs_sistema_user_id")
  @@index([cultivoId], map: "idx_logs_sistema_cultivo_id")
  @@map("logs_sistema")
}

// ─── Enums ───────────────────────────────────────────────────────────────────

enum DeviceType {
  GATE
  POT
  ACTUATOR
  TANK
  LIGHT
  SENSOR_GROUP

  @@map("DeviceType")
}

enum CredentialType {
  PASSWORD
  TELEGRAM
}

enum GateState {
  closed
  opening
  open
  closing
  stopped
  unknown
}

enum GateAction {
  pulse
  opened
  closed
  stopped
  denied
  auto_close
  error
}

enum PortonGroupRole {
  admin
  operator

  @@map("TenantRole")
}

enum GatePermission {
  open
  close
  stop
}
